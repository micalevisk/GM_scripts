{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true,
    "greasemonkey": true
  },

  "globals": {
    "CelClick": true
  },

  "rules": {
    "no-multi-spaces": ["error", { "exceptions": { "ImportDeclaration": true, "VariableDeclarator": true, "Property": true } }],
    "one-var": 0,
    "indent": ["error", 2, { "VariableDeclarator": { "var": 2, "let": 2, "const": 3 } }],
    "space-in-parens": 0 // space-in-parents only in functions params
  }
}
