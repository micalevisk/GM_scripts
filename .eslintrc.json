{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true
  },

  "rules": {
    "no-use-before-define": ["error", { "functions": false, "classes": true }],

    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": true,
      "requireReturnDescription": true
    }],

    "max-len": [1, 120, 2, { "ignoreComments": true }],
    "quote-props": [1, "consistent-as-needed"],
    "no-cond-assign": [2, "except-parens"],
    "radix": 0,
    "space-infix-ops": 0,
    "spaced-comment": ["error", "always", { "line": { "exceptions": ["-","*","="] } }],

    "space-in-parens": ["error", "always", { "exceptions": ["()", "{}", "[]", "empty"] }],
    "space-in-parens": 0,

    "func-names": 0,
    "prefer-template": 0,
    "no-unused-vars": [1, {"vars": "local", "args": "none"}],
    "no-multiple-empty-lines": ["error", { "max": 4, "maxEOF":2, "maxBOF": 2}],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "wrap-iife": ["error", "inside"],
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],

    "no-multi-spaces": ["error", { "exceptions": { "ImportDeclaration": true, "VariableDeclarator": true, "Property": true } }],
    "key-spacing": ["error", { "align": "value" }],

    "no-underscore-dangle": 0,
    "comma-spacing": 0,
    "comma-style": ["error", "first"],
    "array-bracket-spacing": ["error", "always"],
    "comma-dangle": ["error", {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
    }],

    "one-var": ["error", { "let": "always", "const": "always" }],

    "default-case": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "quotes": 0

  }
}
